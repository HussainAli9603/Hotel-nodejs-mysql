{{#each products}}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text">${{price}}</p>
        <a href="/cart/add/{{id}}" class="btn btn-success">Add to Cart</a>
    </div>
</div>
{{/each}}