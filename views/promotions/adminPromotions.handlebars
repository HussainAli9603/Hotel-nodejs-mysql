<div class="container">
    <a href="/admin/adminPromotions/addPromotions" class="btn btn-info btn-grid my-2">Add</a>

    <div class="container">
        {{#if promotions}}
        <div class="card card-body">
            <h3 class="text-primary">Hotels</h3>
            {{#each promotions}}
            <div class="card border-primary mb-2 w-100 mx-auto">
                <div class="card-header">
                    <h5 class="card-title">{{Num}}</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2">
                            <a href="{{imageURL}}" data-title="{{Num}}" data-toggle="lightbox">
                                <img src="{{imageURL}}" alt="Poster" class="img-thumbnail img-fluid mb-2"
                                    onerror="this.src='/img/no-image.jpg'" style="max-height:160px">
                            </a>
                        </div>
                        <div class="col-lg-8">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-3">
                                    <p class="font">Room Promotion</p>
                                    <p class="text-info">{{Room_Promotion}}</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-3">
                                    <p class="font">Promotion</p>
                                    <p class="text-info">{{Promotion}}</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="row">
                                <div class="col-sm-12 col-md-12 col-lg-3">
                                    <p class="font">Percentage / Price Off</p>
                                    <p class="text-info">{{Percentage}}</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <p>
                                <a href="/admin/adminPromotions/editPromotions/{{id}}" class="card-link mb-2">
                                    <i class="fas fa-pencil-alt"></i>
                                    Edit
                                </a>
                            </p>
                            <p>
                                <a href="/admin/adminPromotions/deletePromotions/{{id}}" class="card-link"
                                    data-toggle="confirmation" data-title="Confirm delete?">
                                    <i class="far fa-trash-alt"></i>
                                    Delete
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
    {{else}}
    <h3>No Promotions Added</h3>
    {{/if}}

    <script>
        $('[data-toggle=confirmation]').confirmation({
            rootSelector: '[data-toggle=confirmation]',
        });
    </script>
</div>