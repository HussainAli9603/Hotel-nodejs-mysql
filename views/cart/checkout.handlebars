            <!--            </div>-->
            <!--            <div class="form-group">-->
            <!--              <label>Name on Card</label>-->
            <!--              <input type="text" placeholder="Jane Doe" class="form-control" name="creditCardName"-->
            <!--                     required>-->
            <!--            </div>-->
            <!--            <div class="row">-->
            <!--              <div class="col-md-8">-->
            <!--                <div class="form-group">-->
            <!--                  <label>Expiry Date</label>-->
            <!--                  <input type="date" placeholder="Jane Doe" class="form-control"-->
            <!--                         name="creditCardExpiry" min="{{minDateToday}}" required>-->
            <!--                </div>-->
            <!--              </div>-->
            <!--              <div class="col-md-4">-->
            <!--                <div class="form-group">-->
            <!--                  <label>CVV</label>-->
            <!--                  <input type="number" minlength="3" maxlength="3" placeholder="123"-->
            <!--                         class="form-control"-->
            <!--                         name="creditCardCVV" required>-->
            <!--                </div>-->
            <!--              </div>-->
                          <input type="text" name="amount" value="{{../amountDue}}" hidden required>
            <!--              <button type="submit" class="btn btn-warning w-100 mt-3">Pay Now</button>-->
            <!--            </div>-->
            <script
                src="https://checkout.stripe.com/checkout.js"
                class="stripe-button"
                data-key="{{../key}}"
                data-name="Payment to Hovago"
                data-description="Hotel? Hovago"
                data-amount="{{../amountDue}}"
                data-currency="sgd">
            </script>
          </form>
        </div>
        <div class="col-md-2"></div>
      </div>

    {{/ifEquals}}
    {{#ifEquals step 3}}
      <div class="row">
        <div class="col-md-12">
          <h4 class="font-weight-bold">Payment Successful</h4>
          <h5>
            <i class="fa fa-check-circle fa-3x m-3 text-success"></i>
            Payment of <b>${{../paymentAmount}}</b> has been made successfully.
          </h5>
          <p>
            <b>{{points}}COMING SOON</b> points have been added to your Rewards.
          </p>
          <p class="font-weight-bold">
            You can redeem purchases under the My Bookings link in the navigation bar.
          </p>
          <p>Thanks for using Hovago!</p>
        </div>
        <div class="row w-100">
          <div class="col-md-6">
            <a href="#" class="btn btn-warning w-75 my-4">Go to My Bookings</a>
          </div>
          <div class="col-md-6">
            <a href="/" class="btn btn-secondary w-75 my-4">Back to Home</a>
          </div>
        </div>
      </div>
    {{/ifEquals}}
  </div>
</div>