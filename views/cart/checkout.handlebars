<div class="card">
  <div class="card-body text-center">
    <h3 class="card-title font-weight-bold">Checkout Order</h3>
    <!-- the checkout steps -->
    <div class="row">
      <div class="col-md-4 font-weight-bold">
        <i class="fa fa-dollar-sign fa-3x m-3"></i>
        <h5 class="font-weight-bold">Step 1</h5>
        <h6 class="font-weight-bold">Select Payment</h6>
      </div>
      <div class="col-md-4">
        <i class="fa fa-dollar-sign fa-3x m-3"></i>
        <h5>Step 2</h5>
        <h6>Make Payment</h6>
      </div>
      <div class="col-md-4">
        <i class="fa fa-dollar-sign fa-3x m-3"></i>
        <h5>Step 3</h5>
        <h6>Redeem and Enjoy</h6>
      </div>
    </div>
    <hr>
    <!-- amount due -->
    {{#if amountDue}}
      <div class="row">
        <div class="col-md-12">
          <h5 class="font-weight-bold">Amount Due</h5>
          <h4 class="font-weight-bold">${{amountDue}}</h4>
        </div>
      </div>
    {{/if}}
    <!-- payment choices -->
    {{#ifEquals step 1}}
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <h4 class="font-weight-bold">Select payment method to proceed</h4>
          <div class="row">
            <div class="col-md-6">
              <a href="/cart/checkout/credit" class="text-reset">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Credit Card</h5>
                    <p class="card-text">
                      <i class="fa fa-credit-card fa-3x m-3"></i>
                    </p>
                  </div>
                </div>
              </a>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Paypal</h5>
                  <p class="card-text">
                  <div class="row">
                    <!--                    <i class="fa fa-paypal fa-3x m-3"></i>-->
                    <img src="/img/cart/pp.png" alt="paypal" class="card-img-bottom"
                         style="height: 60px; object-fit: contain">
                  </div>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3"></div>
      </div>
    {{/ifEquals}}
    {{#ifEquals step 2}}
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <h4 class="font-weight-bold">Enter Payment Details</h4>
          <form action="/cart/checkout/credit" method="post">
            <!--            <div class="form-group">-->
            <!--              <label>Credit Card No</label>-->
            <!--              <input type="text" placeholder="1234 - 5678 - 9123 - 4567" class="form-control"-->
