<a href="/admin/events/addEvent" class="btn btn-info btn-grid my-2">Add Event</a>

<h1>Key Events</h1>
<div class="container">
    {{#if events }}
    <div class="card card-body">
        {{#each events}}
        <div class="card border-primary mb-2 w-100 mx-auto">
            <div class="card-header">
                <h5 class="card-title">{{ name }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-2">
                        <a href="{{ imageURL }}" data-title="{{ name }}" data-toggle="lightbox">
                            <img src="{{ imageURL }}" alt="Image" class="img-thumbnail img-fluid mb-2"
                                onerror="this.src='/img/no-image.jpg'" style="max-height:160px">
                        </a>
                    </div>
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-lg-3">
                                <p class="font-italic">Price</p>
                                <p class="text-info">${{ price }}</p>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-3">
                                <p class="font-italic">Date</p>
                                <p class="text-info">{{ formatDate date 'DD MMM YYYY' }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <p>
                            <a href="/admin/events/editEvent/{{id}}" class="card-link mb-2">
                                <i class="fas fa-pencil-alt"></i>
                                Edit
                            </a>
                        </p>
                        <p>
                            <a href="/admin/events/deleteEvent/{{id}}" class="card-link" data-toggle="confirmation"
                                data-title="Confirm delete?">
                                <i class="far fa-trash-alt"></i>
                                Delete
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>
{{else}}
<h3>No Events Added</h3>
{{/if}}


<script>
    $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]',
    });
</script>