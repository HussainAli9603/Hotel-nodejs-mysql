<div class="container">
    <div class="card card-body">
        <h3>Edit Hotel Details</h3>
        <form action="" method="post">
            <div class="row mb-3">
                <div class="col-lg-9">
                    <div class="form-group">
                        {{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
                        <label class="font-italic" for="hotelName">Hotel Name</label>
                        <input class="form-control mb-1" id="hotelName" name="hotelName" onblur="initialiseTitle()" />
                        <span class="text-danger ml-2" id="OMdbErr" style="display:none">Unavailable</span>
                    </div>

                    {{!--Hotel Contact Number--}}
                    <div class="form-group">
                        <label class="font-italic" for="hotelNO">Hotel Contact Number</label>
                        <input class="form-control" id="hotelNO" name="hotelNO" maxlength="8" />
                    </div>

                    {{!--Hotel Description--}}
                    <div class="form-group">
                        <label class="font-italic" for="hotelDesc">Hotel Description</label>
                        <textarea class="form-control" id="hotelDesc" name="hotelDesc" rows="6"
                            maxlength="2000"></textarea>
                    </div>

                    {{!--Hotel Logo--}}
                    <div class="col-lg-3">
                        <div class="custom-file mb-2">
                            <input type="file" class="custom-file-input" id="posterUpload" name="posterUpload"
                                accept="image/png,image/jpeg,image/jpg,image/gif">
                            <label class="custom-file-label" for="customFile">Choose File</label>
                        </div>
                        <div class="text-danger small mb-2" id="posterErr" style="display:none"></div>
                        <img id="poster" src="/img/no-image.jpg" alt="Poster" class="border img-thumbnail img-fluid">
                        {{!â€”- Hidden field to submit URL of poster to the server --}}
                        <input id="posterURL" type="hidden" name="logoURL">
                    </div>
                    <br>
                    {{!--Hotel payment method--}}
                    <div class="form-group">
                        <div class="row mb-2">
                            <div class="col-12 col-sm-12 col-md-12 col-lg-6">
                                <label class="font-italic">Payment Method</label>
                                <br>
                                {{!-- Practical 5 Exercise 2: Language radio buttons here named 'language'--}}
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="paymentMethod"
                                        id="paymentMasterCard" value="MasterCard" {{checkboxCheck hotel.paymentMethod "MasterCard" }}
                                        onclick="ensureOneCheck('paymentMethod', 'paymentMethodErr', 'btnSubmit')">
                                    <label class="form-check-label" for="mastercard">MasterCard</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="paymentMethod"
                                        id="paymentNETS" value="NETS" {{checkboxCheck hotel.paymentMethod "NETS" }}
                                        onclick="ensureOneCheck('paymentMethod', 'paymentMethodErr', 'btnSubmit')">
                                    <label class="form-check-label" for="nets">NETS</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="paymentMethod"
                                        id="paymentPaypal" value="Paypal" {{checkboxCheck hotel.paymentMethod "Paypal" }}
                                        onclick="ensureOneCheck('paymentMethod', 'paymentMethodErr', 'btnSubmit')">
                                    <label class="form-check-label" for="paypal">Paypal</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="paymentMethod"
                                        id="paymentVisa" value="Visa" {{checkboxCheck hotel.paymentMethod "Visa" }}
                                        onclick="ensureOneCheck('paymentMethod', 'paymentMethodErr', 'btnSubmit')">
                                    <label class="form-check-label" for="visa">Visa</label>
                                </div>   
                                <p class="text-danger m-0" id="paymentMethodErr" style="display:none">Please select one payment type</p>
                            </div>
                        </div>
                    </div>
                    <button id="btnSubmit" type="submit" class="btn btn-primary">Save
                     </button>
                </div>
            </div>
        </form>
    </div>
</div>