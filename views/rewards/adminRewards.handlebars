<div class="container">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#adminRewardstab">Rewards</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#adminPastRewards">Past Rewards</a>
        </li>
    </ul>
    <br>
    <!-- Tab panes -->
    <div class="tab-content">
        <div id="adminRewardstab" class="container tab-pane active">

            <a href="/admin/rewards/addRewards" class="btn btn-info btn-grid my-2">Add Rewards</a>


            <div class="container">
                {{#if rewards}}
                <div class="card card-body">
                    <h3 class="text-primary">Hotels</h3>
                    {{#each rewards}}
                    <div class="card border-primary mb-2 w-100 mx-auto">
                        <div class="card-header">
                            <h5 class="card-title">{{location}}</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-2">
                                    <a href="{{imageURL}}" data-title="{{location}}" data-toggle="lightbox">
                                        <img src="{{imageURL}}" alt="Poster" class="img-thumbnail img-fluid mb-2"
                                            onerror="this.src='/img/no-image.jpg'" style="max-height:160px">
                                    </a>
                                </div>
                                <div class="col-lg-8">
                                    <div class="row">
                                        <div class="col-sm-12 col-md-12 col-lg-3">
                                            <p class="font">Amount Off</p>
                                            <p class="text-info">{{amountOff}}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <p>
                                        <a href="/admin/rewards/editRewards/{{id}}" class="card-link mb-2">
                                            <i class="fas fa-pencil-alt"></i>
                                            Edit
                                        </a>
                                    </p>
                                    <p>
                                        <a href="/admin/rewards/deleteReward/{{id}}" class="card-link"
                                            data-toggle="confirmation" data-title="Confirm delete?">
                                            <i class="far fa-trash-alt"></i>
                                            Delete
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>

            </div>
            {{else}}
            <h3>No Rewards Added</h3>
            {{/if}}

            <div id="adminPastRewards" class="container tab-pane fade"><br>
                <h3>Past Rewards</h3>
            </div>

            <script>
                $('[data-toggle=confirmation]').confirmation({
                    rootSelector: '[data-toggle=confirmation]',
                });
            </script>
        </div>
    </div>
    <br>