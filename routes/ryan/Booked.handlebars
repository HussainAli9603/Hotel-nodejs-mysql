    </div>
</header>
<!-- end of header -->
<!-- side navbar -->
<div class="sidenav" id="sidenav">
    <span class="cancel-btn" id="cancel-btn">
        <i class="fas fa-times"></i>
    </span>

    <ul class="navbar">
        <li><a href="/Home.handlebars">home</a></li>
        <li><a href="#rooms">rooms</a></li>
    </ul>
</div>
<!-- end of side navbar -->
<!-- fullscreen modal -->
<div id="modal"></div>
<!-- end of fullscreen modal -->


<section class="rooms sec-width" id="rooms">
    <div class="rooms-container">
        <!-- single room -->
        <article class="room">
            <div class="room-text">
                <h3>Booked Room Detail:</h3>
                <p>Room Name: {{ booking_info.room }}</p><br>
                <p>Date of Check-in: {{ booking_info.check_in }}</p><br>
                <p>Date of Check-out: {{ booking_info.check_out }}</p><br>
                <p>Number of adults: {{ booking_info.adults }}</p><br>
                <p>Number of children: {{ booking_info.child }}</p><br>
            </div>  
        </article>
        <!-- end of single room -->
</section>


<!-- end of body content -->

